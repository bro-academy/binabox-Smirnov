    <dl class="banner__stat">
        {% for stat in bannerStats %}
            <div class="banner__stats">
                <dt class="banner__stat-txt">{{ stat.statname }}</dt>
                <dd class="banner__stat-num">{{ stat.statnum }}</dd>
            </div>
        {% endfor %}
    </dl>
    <div class="banner__buttons">
        <a href="#" class="button button--glow">{{ banner.btn1 }}</a>
        <a href="#" class="button">{{ banner.btn2 }}</a>
    </div>
</section>